<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/acc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avt2"
            />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Cẩm Vân"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#151515"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Khách hàng mới"
                    android:textSize="24sp"

                    android:textColor="#151515"/>



            </LinearLayout>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_notifications_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bt_tichdiem"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_tichdiem"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tích điểm"
                android:textSize="18sp"
                android:textColor="#151515"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bt_dathangtren"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/dhang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đặt hàng"
                android:textSize="18sp"
                android:textColor="#151515"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bt_coupon"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/coupon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Coupon"
                android:textSize="18sp"
                android:textColor="#151515"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bt_rewards"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/rewards"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rewards"
                android:textSize="18sp"
                android:textColor="#151515"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">

        <GridView

            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:numColumns="2"

            android:horizontalSpacing="2dp"
            android:verticalSpacing="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_tintuc"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_tintuc"
            android:background="@drawable/buttonfooter"
            android:text="Tin tức"
            android:textAllCaps="false"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/bt_dathang"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_dathang"
            android:background="@drawable/buttonfooter"
            android:text="Đặt hàng"
            android:textAllCaps="false"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/bt_cuahang"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_cuahang"
            android:background="@drawable/buttonfooter"
            android:text="Cửa hàng"
            android:textAllCaps="false"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/bt_taikhoan"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_taikhoan"
            android:background="@drawable/buttonfooter"
            android:text="Tài khoản"
            android:textAllCaps="false"
            android:textSize="18sp"/>



    </LinearLayout>




</LinearLayout>
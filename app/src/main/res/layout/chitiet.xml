<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bt_close"
                        android:layout_marginLeft="15dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/ic_baseline_close_24"
                        android:background="#FAFAFA"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết"
                        android:layout_marginLeft="125dp"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="#000000"/>
                </LinearLayout>


            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/mua3tang1" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Mua 3 tặng 1 - Ưu đãi đặc biệt "
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#1C1C1C"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Chỉ cần nhập mã TIECTRA19 nhận ngay ưu đãi.Đi làm mà có một “nhóm” ăn ý quả là không gì bằng! Không chỉ là những người đồng nghiệp, “nhóm” còn là nguồn cảm hứng giúp cuộc sống công sở của bạn thú vị hơn rất nhiều. Nhân ngày thứ sáu này, hãy cùng Nhà “thắt chặt” tình thân công sở với ưu đãi: Mua 3 tặng 1."

                    android:textColor="#1C1C1C"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/olong" />

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/matcha" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

